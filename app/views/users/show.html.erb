<h3><%= "#{@user.name}のマイページ" %>  (<%= "ユーザーID##{@user.id}" %>)</h3>
<hr/>

<p>
    <strong>プロフィール画像</strong><br>
    <% if @user.icon?%>
        <%= image_tag @user.icon.url, style: "border-radius: 50%; width: 120px; height: 120px; object-fit:cover;"%>
    <% else%>
        <%= image_tag ("default_icon.jpeg"), style: "border-radius: 50%; width: 120px; height: 120px; object-fit:cover;" %>
    <%end%>
</p>
<p><strong>ユーザー名</strong><%= @user.name %></p>
<p><strong>部署名</strong><%= @user.department %></p>
<p><strong>メールアドレス</strong><%= @user.email %></p>
<%= link_to "プロフィール編集", edit_user_registration_path %>

<hr class="featurette-divider">

<div>
    <h3>所属チーム</h3>
    <table class="table">
    <tbody>
        <% @user.assign_teams.each do |team| %>
        <tr>
            <td><%= team.name %></td>
            <td><%= link_to "詳細", team_path(team) %></td>
            <td><%= link_to '課題一覧', team_issues_path(team) %></td>
            <td><%= link_to '課題追加', new_team_issue_path(team) %></td>
        </tr>
        <% end %>
    </tbody>
    </table>
</div>

<hr class="featurette-divider">

<div>
    <h3>自分が担当しているAction一覧</h3>
    <table class="table">
    <tbody>
        <% @user.plans.each do |plan| %>
        <tr>
            <td><%= plan.action %></td>
            <td><%= link_to "詳細", team_issue_plan_path(@team, @issue, plan) %></td>
        </tr>
        <% end %>
    </tbody>
    </table>
</div>