<div class="nested-fields">
  <div class="row mx-auto">
    <div class="col-5">

      <h3><strong>改善案</strong></h3>
        <%= f.hidden_field :id %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :team_id, value: @team.id %>


        <div class="field">
          <%= f.label :action %>
          <%= f.text_area :action, placeholder: "課題に対して、解決するためのアクションを記入しましょう" %>
        </div>

        <div class="field">
          <%= f.label :pic %>
          <%= f.collection_select(:pic, @team.members, :id, :name, include_blank: '選択') %>
        </div>

        <div class="field">
          <%= f.label :due_date_at %>
          <%= f.date_field :due_date_at %>
        </div>

        <div class="field">
          <%= f.label :status %>
          <%= f.select :status, Plan.statuses.keys.to_a,include_blank: "選択して下さい"  %>
        </div>

        <div class="field">
          <%= f.label :feedback %>
          <%= f.select :feedback, Plan.feedbacks.keys.to_a,include_blank: "選択して下さい"  %>
        </div>
        <%= link_to_remove_association "削除", f, class: "btn btn-secondary btn-block" %>
    </div>
  </div>
</div>
