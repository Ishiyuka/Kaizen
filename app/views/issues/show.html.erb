<h2>課題一覧</h2>
<div class="row">
  <div class="col">
    <div class="card mb-3" style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-md-4">
            <% if @issue.image?%>
              <%= image_tag @issue.image.url, class: "img-fluid"%>
            <% else%>
              <%= image_tag "default.jpeg", class: "img-fluid"%>
            <%end%>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">改善前
              <%  if @issue.done_flag %>
                <span class="badge bg-secondary"><i class="bi bi-flag-fill"></i></span>
              <% end %>
            </h5>
            <p class="card-text">
              課題の題目:<%= @issue.title %><br>
              詳細:<%= @issue.detail %><br>
              原因:<%= @issue.cause %><br>
              目標:<%= @issue.goal %><br>
              ギャップ:<%= @issue.gap %><br>
              期限:<%= @issue.due_date_at %><br>
              優先度:<%= @issue.priority %><br>
              状況:<%= @issue.status %><br>
            </p>
            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
          </div>
        </div>
      </div>
    </div>

  </div>
  <div class="col">
    <div class="card mb-3" style="max-width: 540px;">
      <div class="row no-gutters">
        <div class="col-md-4">
          <% if @issue.image?%>
            <%= image_tag @issue.image.url, class: "img-fluid" %>
          <% else%>
            <%= image_tag "default.jpeg", class: "img-fluid"%>
          <%end%>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">改善後:</h5>
            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<hr class="featurette-divider">
<% @issue.plans.each.with_index(1) do |plan, i| %>
<h3>改善案<%= "#{i}" %></h3>

<table>
  <thead>
    <tr>
      <th>アクション:</th>
      <th>担当者:</th>
      <th>アクションの期限:</th>
      <th>アクションの状況:</th>
      <th>評価:</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= plan.action %></td>
      <td><%= User.find(plan.pic).name %></td>
      <td><%= plan.due_date_at %></td>
      <td><%= plan.status %></td>
      <td><%= plan.feedback %></td>
    </tr>
  </tbody>
</table>
<% end %>

<%= link_to edit_team_issue_path(@team, @issue) do %>
  <i class="bi bi-pen"></i>編集
<% end %>
<%= link_to 'Back', team_issues_path(@team) %> |
<%= link_to 'Action Planを作成', new_team_issue_plan_path(team_id: @team, issue_id: @issue) %>
