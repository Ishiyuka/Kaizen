<h1><%= t('.display') %></h1>


<table>
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= link_to '詳細', team_path(team) %></td>
        <% if current_user.id == team.owner_id %>
          <td><%= link_to '編集', edit_team_path(team) %></td>
          <td><%= link_to '削除', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

