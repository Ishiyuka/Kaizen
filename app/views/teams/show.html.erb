<div class="main-content">
  <h1><%= @team.name %> の詳細</h1>

<div class="btn-cover">
  <div class="user-show">
    <table class="team-table">
          <h3>チームメンバー</h3>
      <thead>
        <tr>
          <th>名前</th>
        </tr>
      </thead>
      <tbody>
          <% @assings.each do |assign| %>
            <tr>
              <td><%= assign.name %></td>
                <% if (current_user.admin == true) || (assign.id == current_user.id) %>
                  <td><%= button_to '詳細', user_path(assign.id),method: :get, class: "btn mini-btn" %></td>
                <% end %>
            </tr>
          <% end %>
      </tbody>
    </table>
    </div>
  </div>

<div class="btn-cover">
  <div class="user-show">
    <table class="team-table">
      <thead>
        <tr>
          <th></th>
          <th>Team</th>
          <th>Title</th>
          <th>期限日</th>
          <th>優先度</th>
          <th>進捗</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @issues.each do |issue| %>
          <tr>
            <% if issue.done_flag == true %>
              <td> 完了 </td>
            <% else %>
              <td>未完了</td>
            <% end %>
              <td><%= issue.team.name %></td>
              <td><%= issue.title %></td>
              <td><%= issue.due_date_at %></td>
              <td><%= issue.priority %></td>
              <td><%= issue.status %></td>
              <td><%= link_to 'Show', team_issue_path(issue.id, team_id: issue.team.id) %></td>
              <td><%= link_to 'Edit', edit_team_issue_path(issue.id, team_id: issue.team.id) %></td>
              <td><%= link_to 'Destroy', team_issue_path(issue.id, team_id: issue.team.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<% unless @teams.user_id == current_user.id %>
  <% if @assign.present? %>
    <%= link_to 'チームから外れる', team_assign_path(id: @assign.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'チームに加わる', team_assigns_path(team_id: @team.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %>
<%= link_to '課題一覧', team_issues_path(@team, @issue) %>
