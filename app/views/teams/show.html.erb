<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @team.name %>
</p>

<p>
  <strong>メンバー:</strong><br>
    <% @assigns.each do |user| %>
      <%= user.name %>
    <% end %>
</p>

  <% if @assign.present? %>
    <%= link_to 'チームから外す', assign_path(id: @assign.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'チームに加える', assigns_path(team_id: @team.id), method: :post, class: 'btn btn-primary' %>
  <% end %>

<%= link_to 'Edit', edit_team_path(@team) %> |
