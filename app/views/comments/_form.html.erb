<% comment = Comment.new(plan: plan) %>
  <%= form_with(model: [@team, @issue, plan, comment], local: false) do |form| %>
    <% if comment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(comment.errors.count, "error") %> 件エラーがあります。</h2>
        <ul>
        <% comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="comment_form">
      <div class="row mb-3">
        <%= form.label :content, {class: 'col-sm-2 col-form-label'} %>
        <div class="col-sm-8">
          <%= form.text_area :content, class: 'form-control', placeholder: '実践してみて感じたことや、何か気づきを書きましょう　※200文字まで' %>
        </div>
        <div class="action">
          <%= form.submit %>
        </div>
      </div>
    </div>
  </div>
<% end %>